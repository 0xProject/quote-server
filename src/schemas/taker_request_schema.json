            "$ref": "/numberSchema"
        },
        "txOrigin": {
            "$ref": "/addressSchema"
        },
        "isLastLook": {
            "type": "string",
            "pattern": "(^true$)|(^false$)"
        }
    },
    "required": ["sellTokenAddress", "buyTokenAddress", "takerAddress"],
    "oneOf": [
        {
            "id": "sellAmountBaseUnits",
