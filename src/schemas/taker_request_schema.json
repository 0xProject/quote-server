            "$ref": "/addressSchema"
        },
        "buyTokenAddress": {
            "$ref": "/addressSchema"
        },
        "takerAddress": {
            "$ref": "/addressSchema"
        },
        "comparisonPrice": {
            "$ref": "/numberSchema"
        },
