            },
            "required": ["sellAmountBaseUnits"]
        },
        {
            "id": "buyAmountBaseUnits",
            "properties": {
                "buyAmountBaseUnits": { "$ref": "/wholeNumberSchema" }
            },
            "required": ["buyAmountBaseUnits"]
        }
    ],
    "type": "object"
